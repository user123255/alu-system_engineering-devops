#!/bin/bash
# 0-custom_http_response_header
# Automates Nginx installation and sets a custom HTTP header X-Served-By

# Update packages and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Enable and start Nginx
sudo systemctl enable nginx
sudo systemctl start nginx

# Get the server hostname
HOSTNAME=$(hostname)

# Create Nginx config snippet to add the header
sudo bash -c "cat > /etc/nginx/conf.d/custom_header.conf <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    # Add custom header with server hostname
    add_header X-Served-By \"$HOSTNAME\";

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF"

# Test and reload Nginx
sudo nginx -t
sudo systemctl reload nginx

