#!/usr/bin/env bash
# This script configures a new Ubuntu machine to serve HTTP traffic with a custom header
# The custom header X-Served-By will contain the server's hostname

# Update package list and install nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Configure Nginx to include the custom header with the server's hostname
CONFIG_FILE="/etc/nginx/sites-available/default"

# Check if the default file exists and backup if it does
if [ -f "$CONFIG_FILE" ]; then
    sudo cp "$CONFIG_FILE" "$CONFIG_FILE.bak"
fi

# Create new configuration with custom header
sudo bash -c "cat > $CONFIG_FILE << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        # Add custom header with server hostname
        add_header X-Served-By \$hostname always;
        try_files \$uri \$uri/ =404;
    }
}
EOF"

# Ensure the site is enabled
sudo ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

# Test Nginx configuration
sudo nginx -t

# Restart Nginx to apply changes
sudo systemctl restart nginx

# Enable Nginx to start on boot
sudo systemctl enable nginx
