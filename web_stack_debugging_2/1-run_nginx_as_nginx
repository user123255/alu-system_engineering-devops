#!/bin/bash
# 1-run_nginx_as_nginx
# Run Nginx as nginx user and listen on port 8080

set -e

NGINX_CONF="/etc/nginx/nginx.conf"

# Backup original config
[ ! -f "${NGINX_CONF}.bak" ] && cp "$NGINX_CONF" "${NGINX_CONF}.bak"

# Ensure nginx runs as nginx user
sed -i 's/^user .*/user nginx;/' "$NGINX_CONF"

# Set Nginx to listen on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' "$NGINX_CONF"
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' "$NGINX_CONF"

# Start Nginx if not running
if ! pgrep nginx >/dev/null 2>&1; then
    nginx
else
    nginx -s reload
fi

# Explicitly print Nginx master and worker processes
ps aux | grep '[n]ginx'

