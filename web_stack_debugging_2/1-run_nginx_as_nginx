#!/bin/bash
# This script ensures Nginx runs as nginx user on port 8080

# Install Nginx if not installed
if ! command -v nginx >/dev/null 2>&1; then
    apt-get update -y
    apt-get install -y nginx
fi

# Backup default config
cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak

# Update Nginx to listen on port 8080 and run as nginx user
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf 2>/dev/null || echo "user nginx;" >> /etc/nginx/nginx.conf

# Remove any old PID
rm -f /run/nginx.pid

# Start Nginx as nginx user
nginx -g "daemon off;"

