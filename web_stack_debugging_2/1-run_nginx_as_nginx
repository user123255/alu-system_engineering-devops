#!/bin/bash
# 1-run_nginx_as_nginx
# Script to run Nginx as nginx user on port 8080

# Exit if any command fails
set -e

# Make sure Nginx is installed
if ! command -v nginx >/dev/null 2>&1; then
    apt-get update -y
    apt-get install -y nginx
fi

# Ensure nginx user exists
id -u nginx >/dev/null 2>&1 || useradd -r -s /bin/false nginx

# Configure Nginx to run as nginx user
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf 2>/dev/null || echo "user nginx;" >> /etc/nginx/nginx.conf

# Configure default site to listen on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' /etc/nginx/sites-available/default

# Remove old PID file (if exists)
rm -f /run/nginx.pid

# Start Nginx in the foreground
nginx -g "daemon off;"

