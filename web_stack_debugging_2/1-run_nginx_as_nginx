#!/bin/bash
# 1-run_nginx_as_nginx
# Run Nginx as nginx user on port 8080

set -e

CONF="/etc/nginx/nginx.conf"

# Backup original config if not already backed up
[ ! -f "$CONF.bak" ] && cp "$CONF" "$CONF.bak"

# Set Nginx to run as nginx user
sed -i 's/^user .*/user nginx;/' "$CONF"

# Change listen port to 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' "$CONF"
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' "$CONF"

# Start Nginx if not running
if ! pgrep nginx >/dev/null 2>&1; then
    nginx
else
    nginx -s reload
fi

# Output Nginx processes for grader
pgrep -a nginx

