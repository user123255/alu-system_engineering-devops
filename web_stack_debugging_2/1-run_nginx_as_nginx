#!/bin/bash
# 1-run_nginx_as_nginx
# This script configures Nginx to run as the nginx user and listen on port 8080

# Exit immediately if a command fails
set -e

# Update default Nginx configuration to listen on port 8080
# And ensure it runs as the nginx user
NGINX_CONF="/etc/nginx/nginx.conf"

# Backup original config if not already done
[ ! -f "${NGINX_CONF}.bak" ] && cp "$NGINX_CONF" "${NGINX_CONF}.bak"

# Replace 'user' directive to nginx
sed -i 's/^user .*/user nginx;/' "$NGINX_CONF"

# Replace default port 80 to 8080 in the http block
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' "$NGINX_CONF"
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' "$NGINX_CONF"

# Reload Nginx if already running, else start it
if pgrep nginx >/dev/null 2>&1; then
    nginx -s reload
else
    nginx
fi

# Display Nginx processes (master + workers)
pgrep -a nginx

# Verify port 8080 is open (optional)
nc -z 0 8080

