#!/usr/bin/env bash
# Install and configure Nginx to display "Holberton School for the win!" on the root page

# Update package list and install nginx
apt-get update -y
apt-get install -y nginx

# Replace the default index page with the required text
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure Nginx is running
service nginx start
