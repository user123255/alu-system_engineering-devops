#!/usr/bin/env bash
# This script installs and configures Nginx to serve a page with "Holberton School"

# Update package lists and install nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Ensure Nginx is running
sudo service nginx start

# Replace the default index page content with "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Restart Nginx to apply changes
sudo service nginx restart
